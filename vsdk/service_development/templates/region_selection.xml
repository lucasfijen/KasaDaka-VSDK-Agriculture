{% extends "base.xml" %}
{% block content%}
<form id="region_form">
	<field name="region_field">
		<prompt>
			{% for region in regions %}
			<audio src="{{ region.get_interface_voice_label_url_dict.pre_choice_option }}"/>
			<audio src="{{ region.get_interface_voice_label_url_dict.voice_label }}"/>
			<audio src="{{ region.get_interface_voice_label_url_dict.post_choice_option }}"/>
			{% for number in region.get_interface_numbers_voice_label_url_list %}{% if forloop.counter0 == forloop.parentloop.counter %}<audio src="{{ number }}"/>{% endif %}{% endfor %}
			{% endfor %}
		</prompt>


   <grammar xml:lang="en-US" root = "MYRULE" mode="dtmf">
      <rule id="MYRULE" scope = "public">
        <one-of>
          {% for region in regions %}
            <item>{{ forloop.counter }}</item>
          {% endfor %}
        </one-of>
       </rule>
   </grammar>
   {# when there has been input, save the corresponding URI in the given variable #}
   <filled>
    {% for region in regions %}
      {% if forloop.counter == 1 %}
      <if cond="region_field == '{{ forloop.counter }}'">
		  <assign name="region_id" expr="'{{ region.id }}'"/>
      {% else %}
      <elseif cond="region_field == '{{ forloop.counter }}'" />
      <assign name="region_id" expr="'{{ region.id }}'"/>
      {% endif %}
    {% endfor %}

    <else/>
    </if>
    <goto next="#submit_form"/>
  </filled>
 </field>
</form>


<form id="submit_form">
<block>
	{# include the variables in the dictionary 'pass_on_variables' as POST variables #}
	{% for key, value in pass_on_variables.items %}
	<assign name="{{ key }}" expr="'{{ value }}'"/>
	{% endfor %}
	<submit next="{{ redirect_url }}" method="post" namelist="region_id {% for key, value in pass_on_variables.items %} {{ key }} {% endfor %}"/>
</block>
</form>


{% endblock %}
